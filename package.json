{
    "name": "idleascension",
    "version": "1.0.0",
    "description": "Idle Ascension repository",
    "main": "main.js",
    "type": "module",
    "engines": {
        "node": ">=20.9.0"
    },
    "scripts": {
        "build": "npm-run-all -s \"build:esbuild\" -p \"build:sass\" \"build:gameModule\"",
        "build-watch": "run-p \"build:esbuild-watch\" \"build:sass-watch\" ",
        "build:esbuild": "tsx scripts/esbuild.ts",
        "build:esbuild-watch": "tsx scripts/esbuild.ts --watch",
        "build:sass": "tsx scripts/sass.ts",
        "build:sass-watch": "run-s \"build:sass --watch\"",
        "build:gameModule": "run-s build:gameModuleSchema build:gameModuleSchemaValidator",
        "build:gameModuleSchema": "tsx scripts/generateGameModuleSchema.ts",
        "build:gameModuleSchemaValidator": "tsx scripts/generateGameModuleSchemaValidator.ts",
        "eslint": "eslint --ext ts src"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MyzBai/IdleAscension.git"
    },
    "homepage": "https://github.com/MyzBai/IdleAscension#readme",
    "author": {
        "name": "MyzBai"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MyzBai/IdleAscension/issues"
    },
    "dependencies": {
        "ajv": "^8.11.2",
        "lz-string": "^1.5.0"
    },
    "devDependencies": {
        "@types/eslint": "^8.56.2",
        "@types/node": "^18.19.15",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.0.0",
        "esbuild": "^0.19.5",
        "eslint": "^8.53.0",
        "npm-run-all": "^4.1.5",
        "sass": "^1.56.1",
        "tsx": "^3.14.0",
        "typescript": "^5.4.4",
        "typescript-json-schema": "^0.62.0"
    }
}
